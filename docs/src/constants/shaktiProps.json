{
  "breakpoints": [
    { "name": "xs", "type": "576", "notes": "extra small" },
    { "name": "sm", "type": "768", "notes": "small" },
    { "name": "md", "type": "992", "notes": "medium" },
    { "name": "lg", "type": "1200", "notes": "large" },
    { "name": "xl", "type": "1400", "notes": "extra large" }
  ],
  "display": [
    {
      "name": "shown",
      "type": "boolean",
      "notes": "show element (display block)"
    },
    {
      "name": "hidden",
      "type": "boolean",
      "notes": "hide element (display none)"
    }
  ],
  "margin": [
    {
      "name": "m",
      "type": "number or string",
      "notes": "margin (all cardinal directions)"
    },
    {
      "name": "mx",
      "type": "number or string",
      "notes": "margin along x-axis"
    },
    {
      "name": "my",
      "type": "number or string",
      "notes": "margin along y-axis"
    },
    { "name": "mt", "type": "number or string", "notes": "top margin" },
    { "name": "mr", "type": "number or string", "notes": "right margin" },
    { "name": "mb", "type": "number or string", "notes": "bottom margin" },
    { "name": "ml", "type": "number or string", "notes": "left margin" }
  ],
  "padding": [
    {
      "name": "p",
      "type": "number or string",
      "notes": "padding (all cardinal directions)"
    },
    {
      "name": "px",
      "type": "number or string",
      "notes": "padding along x-axis"
    },
    {
      "name": "py",
      "type": "number or string",
      "notes": "padding along y-axis"
    },
    { "name": "pt", "type": "number or string", "notes": "top padding" },
    { "name": "pr", "type": "number or string", "notes": "right padding" },
    { "name": "pb", "type": "number or string", "notes": "bottom padding" },
    { "name": "pl", "type": "number or string", "notes": "left padding" }
  ],
  "color": [
    { "name": "color", "type": "string", "notes": "color" },
    { "name": "bgColor", "type": "string", "notes": "background color" }
  ],
  "column": [
    {
      "name": "size",
      "type": "number",
      "notes": "relative width of column in row (defaults to 1)"
    },
    {
      "name": "showBelow",
      "type": "string",
      "notes": "media breakpoint to show column at (shown at breakpoint or smaller)"
    },
    {
      "name": "showAbove",
      "type": "string",
      "notes": "media breakpoint to show column at (shown at breakpoint or larger)"
    },
    {
      "name": "hideBelow",
      "type": "string",
      "notes": "media breakpoint to hide column at (hidden at breakpoint or smaller)"
    },
    {
      "name": "hideAbove",
      "type": "string",
      "notes": "media breakpoint to hide column at (hidden at breakpoint or larger)"
    }
  ],
  "flex": [
    {
      "name": "flexRow",
      "type": "boolean",
      "notes": "set flex direction to row"
    },
    {
      "name": "flexCol",
      "type": "boolean",
      "notes": "set flex direction to column"
    },
    {
      "name": "flexRowReverse",
      "type": "boolean",
      "notes": "set flex direction to row-reverse"
    },
    {
      "name": "flexColReverse",
      "type": "boolean",
      "notes": "set flex direction to column-reverse"
    },
    {
      "name": "alignStart",
      "type": "boolean",
      "notes": "align items to flex-start"
    },
    {
      "name": "alignEnd",
      "type": "boolean",
      "notes": "align-items to flex-end"
    },
    {
      "name": "alignCenter",
      "type": "boolean",
      "notes": "align items to center"
    },
    {
      "name": "alignBaseline",
      "type": "boolean",
      "notes": "align items to baseline"
    },
    {
      "name": "justifyStart",
      "type": "boolean",
      "notes": "justify content to flex-start"
    },
    {
      "name": "justifyEnd",
      "type": "boolean",
      "notes": "justify content to flex-end"
    },
    {
      "name": "justifyCenter",
      "type": "boolean",
      "notes": "justify content to center"
    },
    {
      "name": "justifyBaseline",
      "type": "boolean",
      "notes": "justify content to baseline"
    },
    {
      "name": "justifySpaceAround",
      "type": "boolean",
      "notes": "justify content with space around"
    },
    {
      "name": "justifySpaceBetween",
      "type": "boolean",
      "notes": "justify content with space between"
    }
  ],
  "text": [
    { "name": "bold", "type": "boolean", "notes": "bold text" },
    { "name": "italic", "type": "boolean", "notes": "italic text" },
    {
      "name": "fontWeight",
      "type": "number or string",
      "notes": "set font weight"
    }
  ]
}
